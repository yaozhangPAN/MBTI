.container {
  padding: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 100vh;
}

.header {
  margin-bottom: 40px;
}

.title {
  font-size: 24px;
  font-weight: bold;
  text-align: center;
}

.action-buttons {
  width: 100%;
  padding: 0 20px;
}

.btn {
  margin: 15px 0;
  background-color: #4CAF50;
  color: white;
  border-radius: 8px;
  font-size: 16px;
  padding: 12px 0;
  width: 100%;
}

.btn:last-child {
  background-color: #2196F3;
}

.btn:active {
  opacity: 0.8;
} 