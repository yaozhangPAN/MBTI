.container {
  padding: 20px;
}

.header {
  text-align: center;
  margin-bottom: 40px;
}

.title {
  font-size: 24px;
  font-weight: bold;
}

.input-section {
  margin: 20px 0;
}

.input-section text {
  display: block;
  margin-bottom: 10px;
}

.input-section input {
  width: 100%;
  height: 40px;
  border: 1px solid #ddd;
  border-radius: 4px;
  padding: 0 10px;
}

.submit-btn {
  margin: 20px 0;
  background-color: #007AFF;
  color: white;
}

.or-section {
  text-align: center;
  margin: 20px 0;
  color: #666;
}

.test-btn button {
  background-color: #34C759;
  color: white;
} 