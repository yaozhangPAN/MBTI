.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.chat-header {
  padding: 10px 20px;
  background-color: #4CAF50;
  color: white;
  text-align: center;
}

.messages-container {
  flex: 1;
  padding: 10px;
  background-color: #f5f5f5;
}

.message {
  max-width: 80%;
  padding: 10px;
  margin: 5px;
  border-radius: 10px;
  word-wrap: break-word;
}

.user-message {
  background-color: #4CAF50;
  color: white;
  margin-left: auto;
  border-radius: 10px 10px 0 10px;
}

.ai-message {
  background-color: white;
  margin-right: auto;
  border-radius: 10px 10px 10px 0;
}

.input-container {
  display: flex;
  padding: 10px;
  background-color: white;
  border-top: 1px solid #eee;
}

.message-input {
  flex: 1;
  height: 36px;
  padding: 0 10px;
  border: 1px solid #ddd;
  border-radius: 18px;
  margin-right: 10px;
}

.send-btn {
  width: 80px;
  height: 36px;
  line-height: 36px;
  background-color: #4CAF50;
  color: white;
  border-radius: 18px;
  padding: 0;
}

.loading {
  text-align: center;
  color: #999;
  padding: 10px;
}

.voice-btn {
  width: 36px;
  height: 36px;
  padding: 0;
  line-height: 36px;
  text-align: center;
  border-radius: 18px;
  margin-right: 10px;
  background-color: #f5f5f5;
  transition: all 0.3s;
}

.voice-btn.recording {
  background-color: #ff4444;
  color: white;
} 