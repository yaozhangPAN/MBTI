<view class="container">
  <view class="question-container" wx:if="{{currentQuestionIndex < questions.length}}">
    <text class="question-number">问题 {{currentQuestionIndex + 1}}/{{questions.length}}</text>
    <text class="question-text">{{questions[currentQuestionIndex].text}}</text>
    
    <view class="options-container">
      <view wx:for="{{questions[currentQuestionIndex].options}}" wx:key="value">
        <button 
          class="option-btn" 
          data-value="{{item.value}}" 
          bindtap="onAnswer"
        >{{item.text}}</button>
      </view>
    </view>
  </view>

  <view class="result-container" wx:else>
    <text>正在分析您的MBTI类型...</text>
  </view>
</view> 