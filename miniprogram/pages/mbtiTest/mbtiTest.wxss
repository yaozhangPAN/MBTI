.container {
  padding: 20px;
}

.question-container {
  margin-bottom: 30px;
}

.question-number {
  display: block;
  color: #666;
  margin-bottom: 10px;
}

.question-text {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 20px;
  display: block;
}

.options-container {
  margin-top: 20px;
}

.option-btn {
  margin: 10px 0;
  background-color: #f5f5f5;
  color: #333;
}

.option-btn:active {
  background-color: #007AFF;
  color: white;
}

.result-container {
  text-align: center;
  padding: 40px 0;
} 