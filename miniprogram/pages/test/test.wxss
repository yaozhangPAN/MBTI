.container {
  padding: 20px;
}

.progress-bar {
  width: 100%;
  height: 4px;
  background-color: #f0f0f0;
  border-radius: 2px;
  margin-bottom: 30px;
}

.progress {
  height: 100%;
  background-color: #4CAF50;
  border-radius: 2px;
  transition: width 0.3s ease;
}

.question-container {
  padding: 20px 0;
}

.question-text {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 30px;
  display: block;
}

.options-container {
  margin-top: 20px;
}

.option {
  padding: 15px;
  background-color: #f8f8f8;
  border-radius: 8px;
  margin-bottom: 15px;
  transition: all 0.3s ease;
}

.option:active {
  background-color: #e0e0e0;
} 