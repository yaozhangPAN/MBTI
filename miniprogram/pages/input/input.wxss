.container {
  padding: 20px;
}

.input-section {
  margin: 40px 0;
}

.title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 20px;
  display: block;
}

input {
  width: 100%;
  height: 44px;
  border: 1px solid #ddd;
  border-radius: 4px;
  padding: 0 15px;
  margin: 10px 0;
  font-size: 16px;
  box-sizing: border-box;
}

.hint {
  font-size: 14px;
  color: #666;
}

.button-group {
  margin-top: 30px;
}

.confirm-btn {
  background-color: #4CAF50;
  color: white;
  margin-bottom: 15px;
}

.back-btn {
  background-color: #f5f5f5;
  color: #333;
} 