page {
  background-color: #f8f8f8;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  color: #333;
}

.container {
  min-height: 100vh;
  padding: 20px;
  box-sizing: border-box;
}

button {
  border-radius: 8px;
  font-size: 16px;
  padding: 12px 0;
  width: 100%;
  border: none;
  outline: none;
}

button::after {
  border: none;
}

input {
  background-color: #fff;
}

.title {
  font-size: 24px;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30px;
} 